{{!-- TEMPLATE FOR SEARCHING MATERIAL SAMPLE COLLECTIONS PAGE --}}
<br>
<div class="container-fluid">
    <p class="lead">Search for Collections</p>
    <p>This page is for searching for collection events, not individual samples. Results are drawn from sample records, then are grouped by identical values for scientific name, material sample type, collection date, and locality.</p>
    <form id="searchCollectionsForm">
        <div class="row">
            <div class="col">
                {{!-- project --}}
                <div class="input-group input-group-sm mb-3">
                    <span class="input-group-text">Project</span>
                    <input id="searchCollectionsProject" type="text" class="form-control">
                </div>
            </div>
            <div class="col">
                {{!-- scientificName --}}
                <div class="input-group input-group-sm mb-3">
                    <span class="input-group-text">Scientific Name</span>
                    <input id="searchCollectionsScientificName" type="text" class="form-control">
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col">
                {{!-- materialSampleType --}}
                <div class="input-group input-group-sm mb-3">
                    <span class="input-group-text">Material Sample Type</span>
                    <input id="searchCollectionsMaterialSampleType" type="text" class="form-control">
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col">
                {{!-- specimen catalogNumber --}}
                <div class="input-group input-group-sm mb-3">
                    <span class="input-group-text">Associated Specimen Catalog Number</span>
                    <input id="searchCollectionsSpecimenCatalogNumber" type="text" class="form-control">
                </div>
            </div>
        </div>
        {{!-- eventDate --}}
        <label class="form-control-sm" for="eventDate">Collection Date</label>
        <div class="row">
            <div class="col">
                <div class="input-group input-group-sm mb-3">
                    <span class="input-group-text">After</span>
                    <input id="searchCollectionsEventEarlyDate" type="text" class="form-control" placeholder="YYYY-MM-DD">
                </div>
            </div>
            <div class="col">
                <div class="input-group input-group-sm mb-3">
                    <span class="input-group-text">Before</span>
                    <input id="searchCollectionsEventLateDate" type="text" class="form-control" placeholder="YYYY-MM-DD">
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col">
                {{!-- recordedBy --}}
                <div class="input-group input-group-sm mb-3">
                    <span class="input-group-text">Collector</span>
                    <input id="searchCollectionsRecordedBy" type="text" class="form-control">
                </div>
            </div>
            <div class="col">
                {{!-- recordNumber --}}
                <div class="input-group input-group-sm mb-3">
                    <span class="input-group-text">Collector Number (Specimen)</span>
                    <input id="searchCollectionsRecordNumber" type="text" class="form-control">
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col">
                {{!-- stateProvince --}}
                <div class="input-group input-group-sm mb-3">
                    <span class="input-group-text">State</span>
                    <input id="searchCollectionsStateProvince" type="text" class="form-control">
                </div>
            </div>
                {{!-- county --}}
            <div class="col">
                <div class="input-group input-group-sm mb-3">
                    <span class="input-group-text">County</span>
                    <input id="searchCollectionsCounty" type="text" class="form-control">
                </div>
            </div>
        </div>
        {{!-- locality --}}
        <div class="row">
            <div class="col-7">
                <div class="input-group input-group-sm mb-3">
                    <span class="input-group-text">Locality</span>
                    <input id="searchCollectionsLocality" type="text" class="form-control" placeholder="Please select Contains, Starts With, or Is Exactly">
                </div>
            </div>
            <div class="col">
                <div class="input-group input-group-sm mb-3">
                    <div class="form-check">
                        <label>
                            <input class="form-check-input" type="radio" name="localityRadio" id="searchCollectionsLocalityContains" value="contains">Contains
                        </label>
                    </div>
                </div>
            </div>
            <div class="col">
                <div class="input-group input-group-sm mb-3">
                    <div class="form-check">
                        <label>
                            <input class="form-check-input" type="radio" name="localityRadio" id="searchCollectionsLocalityStartsWith" value="startsWith">Starts With
                        </label>
                    </div>
                </div>
            </div>
            <div class="col">
                <div class="input-group input-group-sm mb-3">
                    <div class="form-check">
                        <label>
                        <input class="form-check-input" type="radio" name="localityRadio" id="searchCollectionsLocalityIsExactly" value="isExactly">Is Exactly
                        </label>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col">
                {{!-- locationRemarks --}}
                <div class="input-group input-group-sm mb-3">
                    <span class="input-group-text">Landowner or EO</span>
                    <input id="searchCollectionsLocationRemarks" type="text" class="form-control">
                </div>
            </div>
                {{!-- locationID --}}
            <div class="col">
                <div class="input-group input-group-sm mb-3">
                    <span class="input-group-text">Site Name / Location ID</span>
                    <input id="searchCollectionsLocationID" type="text" class="form-control">
                </div>
            </div>
        </div>
        {{!-- SUBMIT BUTTON --}}
        <button type="submit" class="btn btn-primary">Search</button>
        {{!-- Download Button --}}
        <button id="downloadCollectionsSearchResults" type="button" class="btn btn-secondary">Download Results to CSV</button>
    </form>
    <br>
    <br>
    {{!-- SEARCH RESULTS LIST --}}
    <div id="searchCollectionsResults">
        <p>Material Samples</p>
        <table class="table" id="searchCollectionsResultTable">
            <thead>
                <tr>
                    <th scope="col">Scientific Name</th>
                    <th scope="col">Sample Type</th>
                    <th scope="col">Date Collected</th>
                    <th scope="col">Collected By</th>
                    <th scope="col">Total Number Collected</th>
                    <th scope="col">Total Number Available</th>
                    <th scope="col">State Province</th>
                    <th scope="col">County</th>
                    <th scope="col">Locality</th>
                    <th scope="col">Site Name / LocationID</th>
                    <th scope="col">Landowner</th>
                </tr>
            </thead>
            <tbody id="searchCollectionsResultTableData">
            </tbody>
        </table>
    </div>

</div>