{{!-- TEMPLATE FOR SEARCHING MATERIAL SAMPLE DATA PAGE --}}
<br>
<div class="container-fluid">
    <p class="lead">Search for Material Sample Data</p>
    <div class="row">
        <div class="col">
            {{!-- project --}}
            <div class="input-group input-group-sm mb-3">
                <span class="input-group-text">Project</span>
                <input id="project" type="text" class="form-control">
            </div>
        </div>
        <div class="col">
            {{!-- scientificName --}}
            <div class="input-group input-group-sm mb-3">
                <span class="input-group-text">Scientific Name</span>
                <input id="scientificName" type="text" class="form-control">
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col">
            {{!-- materialSampleType --}}
            <div class="input-group input-group-sm mb-3">
                <span class="input-group-text">Material Sample Type</span>
                <input id="materialSampleType" type="text" class="form-control">
            </div>
        </div>
        <div class="col">
            {{!-- catalogNumber --}}
            <div class="input-group input-group-sm mb-3">
                <span class="input-group-text">Catalog Number</span>
                <input id="catalogNumber" type="text" class="form-control">
            </div>
        </div>
    </div>
    {{!-- eventDate --}}
    <label class="form-control-sm" for="eventDate">Collection Date</label>
    <div class="row">
        <div class="col">
            <div class="input-group input-group-sm mb-3">
                <span class="input-group-text">After</span>
                <input id="eventEarlyDate" type="text" class="form-control" placeholder="YYYY-MM-DD">
            </div>
        </div>
        <div class="col">
            <div class="input-group input-group-sm mb-3">
                <span class="input-group-text">Before</span>
                <input id="eventLateDate" type="text" class="form-control" placeholder="YYYY-MM-DD">
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col">
            {{!-- recordedBy --}}
            <div class="input-group input-group-sm mb-3">
                <span class="input-group-text">Collector</span>
                <input id="recordedBy" type="text" class="form-control">
            </div>
        </div>
        <div class="col">
            {{!-- recordNumber --}}
            <div class="input-group input-group-sm mb-3">
                <span class="input-group-text">Collector Number</span>
                <input id="recordNumber" type="text" class="form-control">
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col">
            {{!-- stateProvince --}}
            <div class="input-group input-group-sm mb-3">
                <span class="input-group-text">State</span>
                <input id="stateProvince" type="text" class="form-control">
            </div>
        </div>
            {{!-- county --}}
        <div class="col">
            <div class="input-group input-group-sm mb-3">
                <span class="input-group-text">County</span>
                <input id="county" type="text" class="form-control">
            </div>
        </div>
    </div>
    {{!-- locality --}}
    <div class="row">
        <div class="col-7">
            <div class="input-group input-group-sm mb-3">
                <span class="input-group-text">Locality</span>
                <input id="locality" type="text" class="form-control">
            </div>
        </div>
        <div class="col">
            <div class="input-group input-group-sm mb-3">
                <div class="form-check">
                    <input class="form-check-input" type="radio" name="exampleRadios" id="exampleRadios1" value="option1" checked>
                    <label class="form-check-label form-control-sm" for="exampleRadios1">Contains</label>
                </div>
            </div>
        </div>
        <div class="col">
            <div class="input-group input-group-sm mb-3">
                <div class="form-check">
                    <input class="form-check-input" type="radio" name="exampleRadios" id="exampleRadios1" value="option1" checked>
                    <label class="form-check-label form-control-sm" for="exampleRadios1">Starts With</label>
                </div>
            </div>
        </div>
        <div class="col">
            <div class="input-group input-group-sm mb-3">
                <div class="form-check">
                    <input class="form-check-input" type="radio" name="exampleRadios" id="exampleRadios1" value="option1" checked>
                    <label class="form-check-label form-control-sm" for="exampleRadios1">Is Exactly</label>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col">
            {{!-- locationRemarks --}}
            <div class="input-group input-group-sm mb-3">
                <span class="input-group-text">Landowner or EO</span>
                <input id="locationRemarks" type="text" class="form-control">
            </div>
        </div>
            {{!-- locationID --}}
        <div class="col">
            <div class="input-group input-group-sm mb-3">
                <span class="input-group-text">Location ID</span>
                <input id="locationID" type="text" class="form-control">
            </div>
        </div>
    </div>
    {{!-- SUBMIT BUTTON --}}
    <button type="button" class="btn btn-primary">Search</button>
    <br>
    <br>
    {{!-- SEARCH RESULTS LIST --}}
    <form id="searchResults">
        <label>Hold down the Ctrl (Windows) or Command (Mac) button to select/deselect multiple records.</label>
        <br>
        <button id="downloadRecords" type="button" class="btn btn-primary">Download Selected Records to CSV</button>
        <br>
        <br>
        <select id="searchResult" class="form-select" multiple size="30" style="width: 100%;"></select>
    </form>

</div>